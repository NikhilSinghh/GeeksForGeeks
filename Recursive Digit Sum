int superDigit(string n, int k) {
     long int sum = 0;
    for (int i = 0; i < n.length(); i++) {
        int x = n[i] - '0';
        sum += x;
    }
    sum *= k;
    
    while (sum > 9) {
         int newSum = 0;
        while (sum ) {
            newSum += sum % 10;
            sum /= 10;
        }
        sum = newSum;
    }
    
    return sum;
}
